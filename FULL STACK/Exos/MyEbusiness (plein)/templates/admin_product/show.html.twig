{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
    <h1>Produit</h1>

    <table class="table table-dark">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Dénomination</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ product.content }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ product.image }}</td>
            </tr>
            <tr>
                <th>Promotion</th>
                <td>{{ product.discount ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <button class="btn btn-warning text-warning mb-1"><a class="text-decoration-none" href="{{ path('app_admin_product_index') }}">Retour à la liste</a></button>

    <button class="btn btn-warning text-warning mb-1"><a class="text-decoration-none" href="{{ path('app_admin_product_edit', {'id': product.id}) }}">Modifier</a></button>

    {{ include('admin_product/_delete_form.html.twig') }}
{% endblock %}
