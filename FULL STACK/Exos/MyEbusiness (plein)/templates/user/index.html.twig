{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1 class="text-center text-danger mb-3 mt-3">Index des utilisateurs</h1>

    <table class="table table-striped table-dark table-sm">
        <thead>
            <tr class="text-danger">
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Mot de passe</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Date de naissance</th>
                <th>Adresse</th>
                <th>Compte vérifié</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td class="text-break">{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td class="text-break">{{ user.password }}</td>
                <td>{{ user.userName }}</td>
                <td>{{ user.userLastname }}</td>
                <td>{{ user.birthdate|format_datetime('short', 'none', locale='fr') }}</td>
                <td>{{ user.adress }}</td>
                <td>{{ user.isVerified ? 'Oui' : 'Non' }}</td>
                <td>
                    <button class="btn btn-danger border-light mb-1"><a class="text-decoration-none text-light" href="{{ path('app_user_show', {'id': user.id}) }}">Détails</a></button>
                    <button class="btn btn-danger border-light mb-1" ><a class="text-decoration-none text-light" style="width: 1150px;" href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a></button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">Aucun utilisateur trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <button class="btn btn-danger border-light ml-3 mb-3"><a class ="text-decoration-none text-light" href="{{ path('app_user_new') }}">Create new</a></button> #}
{% endblock %}
