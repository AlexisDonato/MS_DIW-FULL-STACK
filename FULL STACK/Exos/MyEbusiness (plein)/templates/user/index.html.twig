{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1 class="text-center text-danger mb-3">User index</h1>

    <table class="table table-striped table-dark table-sm">
        <thead>
            <tr class="text-danger">
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>UserName</th>
                <th>UserLastname</th>
                <th>Birthdate</th>
                <th>Adress</th>
                <th>IsVerified</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.userName }}</td>
                <td>{{ user.userLastname }}</td>
                <td>{{ user.birthdate|format_datetime('short', 'none', locale='fr') }}</td>
                <td>{{ user.adress }}</td>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                <td>
                    <button class="btn btn-danger border-light mb-1"><a class="text-decoration-none text-light" href="{{ path('app_user_show', {'id': user.id}) }}">show</a></button>
                    <button class="btn btn-danger border-light mb-1" ><a class="text-decoration-none text-light" style="width: 1150px;" href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a></button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <button class="btn btn-danger border-light ml-3 mb-3"><a class ="text-decoration-none text-light" href="{{ path('app_user_new') }}">Create new</a></button>
{% endblock %}
