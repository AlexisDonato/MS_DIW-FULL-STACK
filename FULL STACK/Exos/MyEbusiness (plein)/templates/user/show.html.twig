{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div class="container justify-content-center">
    <h1 class="text-danger text-center ml-5 mb-3 mt-3">User {{ app.user.email }}</h1>

    <table class="table table-striped table-dark">
        <tbody>
            {% if is_granted('ROLE_ADMIN') %}
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            {% endif %}
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            {% if is_granted('ROLE_ADMIN') %}
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            {% endif %}
            <tr>
                <th>UserName</th>
                <td>{{ user.userName }}</td>
            </tr>
            <tr>
                <th>UserLastname</th>
                <td>{{ user.userLastname }}</td>
            </tr>
            <tr>
                <th>Birthdate</th>
                <td>{{ user.birthdate|format_datetime('short', 'none', locale='fr') }}</td>
            </tr>
            <tr>
                <th>Adress</th>
                <td>{{ user.adress }}</td>
            </tr>
             <tr>
                <th>Phone number</th>
                <td>{{ user.phoneNumber }}</td>
            </tr>
            <tr>
                <th>Your account is verified :</th>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
<div class="d-flex">
    <button class="btn btn-danger border-light mr-3"><a class="text-decoration-none text-light" href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a></button>
{% if is_granted('ROLE_ADMIN') %}
    <button class="btn btn-outline-danger border-light mr-3"><a class="text-decoration-none text-light" href="{{ path('app_user_index') }}">back to list</a></button>
{% endif %}
{% if is_granted('ROLE_ADMIN') %}
    {{ include('user/_delete_form.html.twig') }}
{% endif %}
</div>
</div>
{% endblock %}
