{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
<div class="container justify-content-center">
    <h1 class="text-danger ml-5 mb-3 mt-3">Edit user {{ app.user.email }}</h1>

    {{ include('user/_form.html.twig', {'button_label': 'Update'}) }}

{% if is_granted('ROLE_ADMIN') %}
    <button class="btn btn-outline-danger border-light mb-1"  id="submit"><a class="text-decoration-none text-light" href="{{ path('app_user_index') }}">Back to list</a></button>

    {{ include('user/_delete_form.html.twig') }}
{% endif %}
</div>
{% endblock %}
