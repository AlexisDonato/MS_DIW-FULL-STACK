{% extends 'base.html.twig' %}

{% block title %}Catégories
{% endblock %}

{% block body %}

	<div class="container d-flex justify-content-center">
		<div class="row">
			<h1 class="text-info mb-5 mt-3">Choisissez votre catégorie</h1>
			<div class="col-12 col-md-6">
				<ul style="list-style-type: none;" class="list-group">
					{% for category in categories %}
						<li>
						<button class="btn btn-dark border border-secondary text-decoration-none d-flex mt2 mb-2 position-relative">
							<i class="fa-solid fa-satellite text-secondary"></i>
							<h3>
								<a class="text-decoration-none text-light ml-3" href="{{ path('app_catalogue', {'category': category.id}) }}">
								{{ category.name }}
								</a>
							</h3>
							<span class="badge rounded-pill border border-light bg-secondary ml-1">{{ category.products|length }}</span>
							</button>
						</li>
					{% endfor %}
				</ul>
			</div>
		</div>
	</div>

{% endblock %}
