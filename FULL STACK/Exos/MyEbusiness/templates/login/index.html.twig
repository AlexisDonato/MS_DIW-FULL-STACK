{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}
	<h3 class="d-flex justify-content-center text-info"><b>Sign in</b></h3>

	<form action="{{ path('login') }}" method="post">
		<div class="d-flex justify-content-center">
			<div class="form-group">
				<label for="username" class=" mt-5">Email:</label>
				<input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}">
			</div>
		</div>
		<div class="d-flex justify-content-center">
			<div class="form-group">
				<label for="password">Password:</label>
				<input type="password" class="form-control" id="password" name="_password">
			</div>
		</div>
		<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

		<input type="hidden" name="{{ path('app_home') }}" value="/account">

		<div class="d-flex justify-content-center mb-4">
			<button class="btn btn-info btn-sm mr-3" type="submit">Login</button>

            <a href="{{ path('app_forgot_password_request') }}" class="btn btn-outline-info btn-sm ml-3 mr-3">Forgot Password?</a>

			<a href="{{ path('app_register') }}" class="btn btn-info btn-sm ml-3">Register</a>
		</div>
	</form>

    <form class="form-signin" method="post">
        <div class="checkbox text-center text-warning mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    </form>
{% endblock %}
