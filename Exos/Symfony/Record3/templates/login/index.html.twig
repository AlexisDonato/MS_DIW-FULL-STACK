{% extends 'base.html.twig' %}

{# ... #}

{% block body %}
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

	<form action="{{ path('login') }}" method="post">
		<div class="d-flex justify-content-center">
			<div class="form-group">
				<label for="username" class=" mt-5">Email:</label>
				<input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}"/>
			</div>
		</div>
		<div class="d-flex justify-content-center">
			<div class="form-group">
				<label for="password">Password:</label>
				<input type="password" class="form-control" id="password" name="_password"/>
			</div>
		</div>
		<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

		<input type="hidden" name="{{ path('app_disc_index') }}" value="/account"/>

		<div class="d-flex justify-content-center">
			<button class="btn btn-info btn-sm mr-3" type="submit">login</button>

		</form>

		<a href="{{ path('app_register') }}">
			<button class="btn btn-info btn-sm ml-3">Register</button>
		</a>
	</div>
{% endblock %}
