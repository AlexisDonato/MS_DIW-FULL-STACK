<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Index
			{% endblock %}
		</title>
		<link
		rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
		{# <link rel="stylesheet" href="/public/css/style.css">  #}
		{% block stylesheets %}{% endblock %}

		<link rel="icon" type="image/x-icon" href="/img/favicon.jpeg">
	</head>

	<body class="bg-dark text-light">
		<nav class="navbar navbar-expand-lg navbar-light bg-dark text-light sticky-top nav-tabs">
			<a class="navbar-brand text-info " href="{{ path('app_disc_index') }}">Discs & Artists</a>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="navbar-nav mr-auto">
					<li class="nav-item active">
						<a class="nav-link" href="{{ path('app_disc_index') }}">Discs list
							<span class="sr-only">(current)</span>
						</a>
					</li>
					<li class="nav-item active">
						<a class="nav-link" href="{{ path('app_disc_new') }}">New Disc
							<span class="sr-only">(current)</span>
						</a>
					</li>

					<li class="nav-item active">
						<a class="nav-link" href="{{ path('app_artist_index') }}">Artists list
							<span class="sr-only">(current)</span>
						</a>
					</li>
					<li class="nav-item active">
						<a class="nav-link" href="{{ path('app_artist_new') }}">New artist
							<span class="sr-only">(current)</span>
						</a>
					</li>
				</ul>
				<span class="navbar-text text-secondary">
					{{ "now" | date('d-m-Y H:i:s') }}
				</span>
			</div>
		</nav>

		{% for message in app.flashes('success') %}
			<div class="alert alert-success">
				{{ message }}
			</div>
		{% endfor %}

		{% block body %}{% endblock %}
		{# <script src="{{ asset('js/js.js') }}"></script> #}
		<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
		<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
		{% block javascripts %}{% endblock %}
	</body>
</html>
